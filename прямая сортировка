#include <clocale>
#include <iostream>
#include <vector>
#include <limits>

using namespace std;

void bubbleSort(vector<long long int>& vec) { // функция прямая сортировка
    int n = vec.size();
    bool swapped;
    for (int i = 0; i < n - 1; i++) {
        swapped = false;
        for (int j = 0; j < n - i - 1; j++) {
            if (vec[j] > vec[j + 1]) {
                swap(vec[j], vec[j + 1]);
                swapped = true;
            }
        }
        if (!swapped) {
            break;
        }
    }
}

int main() {
    setlocale(LC_ALL, "Russian");

    int n;
    cout << "Введите кол-во элементов последовательности: ";
    cin >> n;

    vector<long long int> vec; // Обновлено: используется long long int вместо int
    long long int a; // Обновлено: используется long long int вместо int
    for (int i = 0; i < n; i++) {
        cout << i + 1 << ". ";
        while (!(cin >> a)) {
            cout << "Некорректный ввод! Введите число: ";
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
        }
        vec.push_back(a);
    }

    cout << "Вот как выглядит последовательность до сортировки:\n";
    for (int i = 0; i < n; i++) {
        cout << vec[i] << " ";
    }

    bubbleSort(vec);

    cout << "\nВот как выглядит последовательность после сортировки:\n";
    for (int i = 0; i < n; i++) {
        cout << vec[i] << " ";
    }

    return 0;
}
